{
  "name": "test",
  "version": "1.0.0",
  "description": "",
  "main": "mic.js",
  "marcel": {
    "brain": {
      "initialState": "active",
      "initialLang": "en"
    },
    "mouth": {
      "voice": {
        "variant": "f6",
        "wordgap": 2,
        "speed": 150,
        "pitch": 2,
        "amplitude": 90
      }
    },
    "ear": {
      "context": {
        "all": {
          "-inmic": "yes",
          "-continuous": "no"
        },
        "raspi": {
          "-adcdev": "plughw:1"
        },
        "release": {
          "-logfn": "/dev/null"
        },
        "linux": {}
      },
      "paths": {
        "fr": {
          "hmm": "`pkg-config --variable=modeldir pocketsphinx`/hmm/fr_FR/french_f0",
          "dic": "`pkg-config --variable=modeldir pocketsphinx`/lm/fr_FR/frenchWords62K.dic",
          "lm": "`pkg-config --variable=modeldir pocketsphinx`/lm/fr_FR/french3g62K.lm.bin"
        },
        "en": {
          "hmm": "`pkg-config --variable=modeldir pocketsphinx`/en-us/en-us/",
          "dic": "`pkg-config --variable=modeldir pocketsphinx`/en-us/cmudict-en-us.dict",
          "lm": "`pkg-config --variable=modeldir pocketsphinx`/en-us/en-us.lm.bin"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "npm run build && ./install-french.sh",
    "start": "pm2 start app/ --watch --name marcel -- release",
    "stop": "pm2 stop app/ --watch --name marcel",
    "logs": "pm2 logs",
    "build": "npm run init:modules && npm run build:listener && npm run fix:mespeak",
    "init:modules": "node init-modules.js",
    "fix:mespeak": "cp fixmespeak.js node_modules/mespeak/src/index.js",
    "build:listener": "./build.sh"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "javascript-state-machine": "^2.3.5",
    "lmtool": "^2.0.3",
    "make-prop-stream": "^1.0.0",
    "pm2": "^1.1.3",
    "randomvoice": "0.0.0",
    "request": "^2.73.0",
    "speaker": "^0.3.0",
    "speech-stream": "^1.0.0",
    "stream-array": "^1.1.2",
    "wav": "^1.0.0"
  }
}
